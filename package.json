{
  "name": "ifu",
  "version": "",
  "scripts": {
    "lint:fix": "eslint . --fix",
    "build": "pnpm build -r",
    "ci:publish": "pnpm run build && pnpx changeset publish",
    "ci:version": "pnpx changeset version",
    "ci:snapshot": "pnpx changeset version --snapshot beta",
    "ci:prerelease": "pnpm run build && pnpx changeset publish --tag beta",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/**/*.{js,ts,tsx,vue,json}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "alfy": "^0.11.1",
    "dayjs": "^1.8.36"
  },
  "devDependencies": {
    "@aiou/eslint-config": "^0.2.2",
    "@changesets/cli": "^2.16.0",
    "@ifu/cli": "workspace:^0.0.2",
    "@types/node": "^14.6.4",
    "eslint": "^7.31.0",
    "husky": "^7.0.0",
    "lint-staged": "^11.1.1",
    "prettier": "^2.1.1",
    "pretty-quick": "^3.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "config": {
    "commitizen": {
      "path": "cz-emoji"
    }
  }
}
